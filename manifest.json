{
  "name": "Check Periodically",
  "version": "0.1.0",
  "description": "Browse pages you want to check periodically",
  "permissions": [
      "storage", "tabs", "activeTab"
  ],
	"background": {
      "scripts": ["background.js"],
      "persistent": true
  },
	"browser_action": {
	  "default_title": "Check Periodically",
    "default_popup": "popup.html",
	  "default_icon": {
        "16": "images/icon16x16.png",
        "32": "images/icon32x32.png",
        "48": "images/icon48x48.png",
        "128": "images/icon128x128.png"
    }
  },
	"icons": {
      "16": "images/icon16x16.png",
      "32": "images/icon32x32.png",
      "48": "images/icon48x48.png",
      "128": "images/icon128x128.png"
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
	"manifest_version": 2
	
}